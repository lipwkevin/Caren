<!-- Modal -->
<div class="modal fade" id="changePassword" tabindex="-1" role="dialog" aria-labelledby="changePassword" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= current_user.errors.full_messages.join(', ') %>
        <%= form_for current_user, :url => user_password_path, :method => :post,remote:true do |f| %>
          <div class="form-group">
            <%= f.label:password_old,"Old Password" %>
            <%= f.password_field :password_old, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label:password_new,'New Password' %>
            <%= f.password_field :password_new , class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.label:password_new_confirmation ,"Password Confirmation"%>
            <%= f.password_field :password_new_confirmation, class: "form-control" %>
          </div>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Submit",{class:'btn btn-md btn-success'} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
