<h1> Reset Password </h1>
<br>
<div class='main-form'>
<%= current_user.errors.full_messages.join(', ') %>
<%= form_for current_user,remote:true , :url => reset_password_path, :method => :post do |f| %>
  <div class='form-group'>
    <%= f.label :email,"Email" %>
    <%= f.text_field :email , class: "form-control"%>
  </div>
  <div class='form-group'>
    <%= f.label :password_new,"New Password" %>
    <%= f.password_field :password_new , class: "form-control"%>
  </div>
  <div class='form-group'>
    <%= f.label :password_new_confirmation,"Confirm Password" %>
    <%= f.password_field :password_new_confirmation, class: "form-control"%>
  </div>
  <%= hidden_field_tag 'key', key %>
  <%= f.submit "Submit",{class:'btn btn-md btn-success'} %>
  <% end %>
</div>
<div class='respond'>
</div>
