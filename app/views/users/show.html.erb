<h1> My Info: </h1>
<br>
<p />User Name: <%= @user.name %>
<p />User ID: <%= @user.uid %>
<p />User Email: <%= @user.email %>
<p />Default Calendar: <%= @user.preference %> Calendar
<p />Scheulde Duration : <%= @user.schedules.first.duration %>
<% unless current_user.provider.nil? || current_user.token.nil? %>
  <p /> Google Account: <%= @user.calendar_email %>
<% end %>
<hr>
<div class='row btn-group'>
  <div class='btn-group-vertical btn-group-lg'>
    <% if current_user.provider.nil? || current_user.token.nil? %>
    <%= link_to  "Sign In With Google","#{ENV["DOMAIN"]}/auth/google",  class:"btn btn-block btn-primary"%>
    <%else %>
    <%= link_to  "Sign out from Google",google_signout_path,  class:"btn btn-block btn-success"%>
    <% end %>
    <br>
    <br>
    <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#preference">
      Settings
    </button>
    <br>
    <br>
    <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#changeInfo">
      Update Info
    </button>
    <br>
    <br>
    <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#changePassword">
      Change Password
    </button>
    <br>
    <br>
    <button type="button" class="btn btn-danger btn-block" data-toggle="modal" data-target="#account-warning">
      Delete Account
    </button>
  </div>
</div>

<%= render 'preference' %>
<%= render "update_password" %>
<%= render "edit" %>
<%= render 'account_warning' %>
