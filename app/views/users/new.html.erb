<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <h1>Sign Up</h1>
    <% @user.errors.full_messages.each do |error|%>
        <ul>
          <li class='form-error'><%= error %></li>
        </ul>
    <% end %>
    <br>
    <%= form_for @user , :url => users_path, :method => :post do |f| %>
      <!-- <div class="form-group">
        <%= f.label :uid,"User ID*" %>
        <%= f.text_field :uid, class: "form-control" %>
      </div> -->
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, {class: "form-control",onclick: 'this.select();'} %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name , {class: "form-control",onclick: 'this.select();'}%>
      </div>
      <div class="form-group">
        <%= f.label :email,"Email*" %>
        <%= f.text_field :email, {class: "form-control",onclick: 'this.select();'} %>
      </div>
      <div class="form-group">
        <%= f.label :password,"Password *" %>
        <%= f.password_field :password, {class: "form-control",onclick: 'this.select();'} %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation,"Password Confirmation*" %>
        <%= f.password_field :password_confirmation, {class: "form-control",onclick: 'this.select();'} %>
      </div>
      <div class="form-group">
        <%# f.label :password_confirmation,"Password Confirmation*" %>
        <%= check_box_tag 'terms', true, false %>
        <%= label_tag do
          "Agree #{link_to "Terms and Agreements", terms_path} *".html_safe
        end%>
      </div>
      <div class="form-group">
        <%= link_to "Cancel", root_path, {:class=>"btn btn-danger"} %>
        <%= f.submit "Sign Up" ,{class:'btn btn-md btn-success'}%>
      </div>
    <% end %>
  </div>
</div>
