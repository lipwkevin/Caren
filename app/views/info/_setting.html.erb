<div class="user-info">
  <p class='title'/> Health Care Provider :
  <p class='content'/> <%= setting.provider %>
  <div class="no-show" id="setting-<%= setting.id %>">
    <% unless (!setting.phone || setting.email.empty?) %>
    <p class='title'/> Phone Number :
    <p class='content'/> <%= setting.phone %>
    <% end %>
    <% unless (!setting.fax || setting.fax.empty?) %>
    <p class='title'/> Fax :
    <p class='content'/> <%= setting.fax %>
    <% end %>
    <% unless (!setting.email || setting.email.empty?) %>
    <p class='title'/> Email :
    <p class='content'/> <%= setting.email %>
    <% end %>
    <p class='title'/> Address :
    <p class='content'/> <%= "#{setting.address_line_1}," unless (!setting.address_line_1 || setting.address_line_1.empty?) %>
    <p class='content'/> <%= "#{setting.address_line_2}," unless (!setting.address_line_1 || setting.address_line_2.empty?) %>
    <p class='content'>
      <span><%= "#{setting.city},"  unless (!setting.city || setting.city.empty?) %></span>
      <span><%= "#{setting.province}," unless (!setting.province || setting.province.empty?) %> </span>
    </p>
    <p class='content'/> <%= setting.postal %>
    <% unless (!setting.notes || setting.notes.empty?) %>
    <p class='title'/> Notes :
    <p class='content'/> <%= setting.notes %>
    <% end %>
    <br>
    <hr style="border-color:black">
    <div class="row">
      <div class='col-sm-12 col-md-6'>
        <%= link_to "Setting",info_edit_path(setting),remote:true,class:"btn btn-success" %>
      </div>
      <div class='col-sm-12 col-md-6'>
        <%= link_to info_destroy_path(setting),
                    remote:true,
                    method: :delete,
                    data: { confirm: 'are you sure?' },
                    class: "btn btn-danger" do %>
          Delete
          <% end  %>
      </div>
    </div>
  </div>
</div>
