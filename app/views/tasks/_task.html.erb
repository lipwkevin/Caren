<tr class='task-<%= task.id %>'>
  <td /> <%= task.name %>
  <td /> Day <%= task.day %>
  <td class="med-<%= task.get_color %>"/> <%= task.time.strftime("%I:%M%p") %>
  <td /> <%= task.remark %>
  <td /> <%= task.category %>
  <td>
    <span class="glyphicon glyphicon-pencil"></span>
  </td>
  <td>
    <%= link_to task_path(task),
                method: :delete,
                data: { confirm: 'are you sure?' },
                class: "pull-right" do %>
      <span class="glyphicon glyphicon-trash remove-icon"></span>
    <% end %>
  </td>
</tr>
