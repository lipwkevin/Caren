<!DOCTYPE html>
<html>
  <head>
    <title>MyCalendar</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="navbar navbar-inverse ">
    <div class="container-fluid">
      <div class="navbar-header">
        <button
          type="button"
          class="pull-left navbar-toggle collapsed"
          data-toggle="collapse"
          data-target="#gmptool-navbar">
          <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
        </button>
      </div>

        <div class="navbar-collapse collapse" id="gmptool-navbar">
          <ul class="nav navbar-nav">
            <li class='navbar-item'><%= link_to 'Home',root_path %></li>
            <% if user_signed_in? %>
              <li class='navbar-item calendar-menu'><%= link_to 'Calendar',calendar_show_path %></li>
              <li class='navbar-item'><%= link_to 'Schedule',schedule_show_path	 %></li>
              <li class='navbar-item'><%= link_to 'Account Info', user_show_path %></li>
            <% end %>
            <li class='navbar-item'><%= link_to 'About',about_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><p class="navbar-text">User: <%= current_user.uid %></p></li>
              <li class='navbar-item'>
                <%= link_to 'Sign out',
                  sessions_path,
                  method: :delete
                  %>
                </li>
            <% else %>
              <li><%= link_to 'Sign Up', new_user_path %></li>
              <li><%= link_to 'Sign In', new_session_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>

  <div class="body container-fluid">
    <% if notice || alert %>
      <div
        class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable"
        role="alert">
        <%= notice || alert %>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <%= yield %>
    <a href="javascript:" id="return-to-top"><i class="glyphicon glyphicon-chevron-up"></i></a>
  </div>

  </body>

  <footer>
    <div class="panel-footer footer navbar-fixed-bottom">
    </div>
  </footer>

</html>
