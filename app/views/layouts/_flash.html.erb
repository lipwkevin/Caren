<% if notice || alert %>
  <div
    class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable"
    role="alert">
    <button
      type="button"
      class="close"
      data-dismiss="alert"
      aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= notice || alert %>
  </div>
  <script>
  clearTimeout(timer);
  var timer = setTimeout(function() { $(".alert").fadeTo(1000, 0).slideUp(1000); }, 5000);
  </script>
<% end %>
