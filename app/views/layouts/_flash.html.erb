<% if notice || alert %>
  <div
    class="alert alert-<%= notice ? 'success' : 'danger'%> alert-dismissable"
    role="alert">
    <%= notice || alert %>
    <button
      type="button"
      class="close"
      data-dismiss="alert"
      aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
