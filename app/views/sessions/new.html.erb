<div class='row'>
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">

    <h1>Please Sign</h1>

    <%= form_tag sessions_path do |f|  %>
      <div class="form-group">
        <%= label_tag :uid,"User ID"%>
        <%= text_field_tag :uid, nil, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= link_to "forgot password?",forget_psasword_path%>
      </div>
      <%= link_to "Cancel", root_path, {:class=>"btn btn-danger"} %>
      <%= submit_tag 'Sign In', class: "btn btn-success" %>
    <% end %>
  </div>
</div>
