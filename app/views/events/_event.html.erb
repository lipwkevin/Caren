<tr class='event-<%= event.id %>'>
  <td class="med-<%= event.get_color %>" /> <%= event.time.strftime("%I:%M %p") %>
  <td /> <%= event.name %>
  <td /> <%= event.remarks %>
  <td /> <%= event.category %>
  <td /> <input id='event-<%= event.id %>' class='checkbox' type="checkbox" check-id="<%= event.id %>" <%= (event.completed)?"checked='true'":"" %>>
  <td>
    <%= link_to edit_event_path(event.id) do %>
      <span class="glyphicon glyphicon-pencil"></span>
    <% end %>
  </td>
  <td>
    <%= link_to event_path(event),
                method: :delete,
                data: { confirm: 'are you sure?' },
                class: "pull-right" do %>
      <span class="glyphicon glyphicon-trash remove-icon"></span>
      <% end  %>
  </td>
</tr>
